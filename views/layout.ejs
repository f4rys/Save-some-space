<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="URL Shortener built with Express.js and MongoDB Atlas." />
    <meta name="keywords" content="url, shortener, save, some, space, shorten, link" />
    <meta name="robots" content="noindex, nofollow"> 
    <meta name="author" content="Wojciech Bartoszek" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="stylesheet" href="/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script type="module" src="/reload.js"></script>
    <title>save some space.</title>
</head>

<body>
    <div class="background-image"></div>

    <div class="container-full-height"><%- body %></div>

    <div id="cookie-banner" class="cookie-banner d-flex justify-content-center">
        <div class="d-flex align-items-center mx-2">This website uses cookies, which are essential for the functionality of the service.</div>
        <div class="d-flex align-items-center mx-2"><a href="/privacy-policy">Privacy Policy</a> <div class="mx-1">|</div> <a href="/terms-of-service">Terms of Service</a></div>
        <div class="d-flex align-items-center mx-2"><button class="btn btn-primary" id="accept-cookies">Accept</button></div>
    </div>
    
    <script>
        const cookieBanner = document.getElementById('cookie-banner');
        const acceptButton = document.getElementById('accept-cookies');
    
        acceptButton.addEventListener('click', () => {
            localStorage.setItem('cookiesAccepted', 'true');
            cookieBanner.classList.add('d-none');
        });
        
        if (localStorage.getItem('cookiesAccepted') !== 'true') {
            cookieBanner.classList.remove('d-none');
        }

        const submitButton = document.getElementById('submitButton');

        // Disable the button initially
        submitButton.disabled = true;
    
        // Initialize the tooltip
        const tooltip = new bootstrap.Tooltip(submitButton, {
            title: 'Accept cookies to use the service',
            placement: 'top', // Adjust placement as needed
            trigger: 'hover' // Show on hover
        });
    
        acceptButton.addEventListener('click', () => {
            localStorage.setItem('cookiesAccepted', 'true');
            cookieBanner.classList.add('d-none');
            submitButton.disabled = false;
            tooltip.hide(); // Hide the tooltip after accepting cookies
        });
    </script>

</body>
</html>
