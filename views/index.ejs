<h1>URL SHRINKER</h1>

<form action="/shortUrls" method="POST">
    <label for="fullUrl">Url</label>
    <input type="url" name="fullUrl" id="fullUrl">
    <button type="submit">Shrink</button>
</form>

<% if (latestShortUrl) { %>
    <p>Shortened URL: <a href="<%= latestShortUrl.short %>"><%= latestShortUrl.short %></a></p>
<% } %>